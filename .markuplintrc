{
  "extends": [
    "markuplint:recommended"
  ],
  "parser": {
    ".erb$": "@markuplint/erb-parser"
  },
  "specs": {},
  "rules": {
    "required-h1": false,
    "required-attr": true,
    "require-accessible-name": false,
    "no-hard-code-id": false
  },
  "nodeRules": [
    {
      "selector": "img",
      "rules": {
        "required-attr": "alt"
      }
    }
  ]
}
