{
  "name": "easel",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:rspack": "rspack --config ./config/rspack/rspack.config.js",
    "build:webpack": "webpack --config ./config/webpack/webpack.config.js",
    "build:scss": "sass ./app/assets/stylesheets/:./app/assets/builds --no-source-map --load-path=node_modules",
    "build:tailwind": "pnpx @tailwindcss/cli -i ./app/assets/stylesheets/tailwind/application.css -o ./app/assets/builds/tailwind.css --minify",
    "build:css": "pnpm build:tailwind && pnpm build:scss",
    "build:font-bootstrap": "copyfiles -f node_modules/bootstrap-icons/font/fonts/* public/assets/fonts",
    "build:font-fontawesome": "copyfiles -f node_modules/@fortawesome/fontawesome-free/webfonts/* ./public/assets/webfonts",
    "build:font": "pnpm build:font-bootstrap && pnpm build:font-fontawesome",
    "watch:ts": "tsc-watch --noClear -p tsconfig.json",
    "lint": "eslint --fix './app/javascript/**/*.{js,ts}'"
  },
  "devDependencies": {
    "@rspack/core": "1.3.15",
    "@rspack/cli": "1.3.15",
    "@tailwindcss/cli": "4.1.10",
    "@types/bootstrap": "^5.2.10",
    "@types/toastify-js": "^1.12.4",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "copyfiles": "^2.4.1",
    "daisyui": "5.0.43",
    "esbuild": "^0.25.5",
    "esbuild-loader": "^4.3.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "sass": "^1.89.2",
    "tailwindcss": "4.1.10",
    "tsc-watch": "^7.1.1",
    "typescript": "5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.13",
    "@hotwired/turbo-rails": "^8.0.16",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "flatpickr": "^4.6.13",
    "rails_admin": "3.3.0",
    "stimulus": "^3.2.2",
    "toastify-js": "^1.12.0"
  }
}
