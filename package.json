{
  "name": "easel",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "watch": "vite dev",
    "build:scss": "sass ./app/assets/stylesheets/:./app/assets/builds --no-source-map --load-path=node_modules",
    "build:tailwind": "pnpx @tailwindcss/cli -i ./app/assets/stylesheets/tailwind/application.css -o ./app/assets/builds/tailwind.css --minify",
    "build:css": "pnpm build:tailwind && pnpm build:scss",
    "build:font-bootstrap": "copyfiles -f node_modules/bootstrap-icons/font/fonts/* public/assets/fonts",
    "build:font": "pnpm build:font-bootstrap",
    "watch:ts": "tsc-watch --noClear -p tsconfig.json",
    "lint": "eslint --fix './app/frontend/**/*.{js,ts}'"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.11",
    "@types/bootstrap": "^5.2.10",
    "@types/toastify-js": "^1.12.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "copyfiles": "^2.4.1",
    "daisyui": "5.0.43",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.1",
    "sass": "^1.89.2",
    "tailwindcss": "4.1.11",
    "tsc-watch": "^7.1.1",
    "typescript": "5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-ruby": "^5.1.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.13",
    "@hotwired/turbo-rails": "^8.0.16",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1",
    "flatpickr": "^4.6.13",
    "rails_admin": "3.3.0",
    "stimulus": "^3.2.2",
    "toastify-js": "^1.12.0"
  }
}
