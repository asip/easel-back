{
  "name": "easel",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo": "^7.3.0",
    "@hotwired/turbo-rails": "^7.3.0",
    "@popperjs/core": "^2.11.8",
    "@types/toastify-js": "^1.12.0",
    "bootstrap": "^5.3.1",
    "bootstrap-icons": "^1.10.5",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.19.0",
    "esbuild-loader": "^4.0.0",
    "rails_admin": "3.1.2",
    "sass": "^1.65.1",
    "stimulus": "^3.2.1",
    "toastify-js": "^1.12.0",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds",
    "build:webpack": "webpack --config ./config/webpack/webpack.config.js",
    "build:css": "sass ./app/assets/stylesheets/:./app/assets/builds --no-source-map --load-path=node_modules",
    "build:font": "copyfiles -f node_modules/bootstrap-icons/font/fonts/* public/assets/fonts && cp -r node_modules/@fortawesome/fontawesome-free/webfonts ./app/assets/builds",
    "watch:ts": "tsc-watch --noClear -p tsconfig.json",
    "lint": "eslint --fix './app/javascript/**/*.{js,ts}'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.1"
  }
}
