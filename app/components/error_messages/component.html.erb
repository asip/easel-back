<% if @model.errors.present? %>
  <div class="toast hide align-items-center position-fixed top-0 end-0" style="margin-top: 60px; margin-right: 10px;"
       role="alert" aria-live="assertive" aria-atomic="true" data-controller="toast">
    <% @model.errors.full_messages.each_with_index do |message, idx| %>
      <div class="d-flex">
        <div class="toast-body"><%= message %></div>
        <% if false %>
          <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
