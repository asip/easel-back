<div class="row">
  <div class="col-sm-8">
  <%= turbo_frame_tag 'users frames' do %>
    <br>
    <%= render partial: "frames/load_prev", locals: {page_scope: @frames, word: @word} %>
    <turbo-frame id="list" class="row">
      <%= render partial: "frames/list", locals: {frames: @frames} %>
    </turbo-frame>
    <%= render partial: "frames/load_next", locals: {page_scope: @frames, word: @word} %>
    <br>
  <% end %>
  </div>
  <div class="flex-shrink-0 col-sm-4">
    <br>
    <div class="card">
      <div class="card-block">
        <br>
        <div class="d-flex justify-content-sm-center" data-controller="calendar">
          <div data-calendar-target="cal" data-date="<%= @day %>" data-origin="<%= Settings.origin %>"></div>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
