        <div class="card-block">
          <%= render(partial: 'frames/preview/image', locals: {frame: frame, original: true, spotlight: false}) %>
          <%= render(partial: 'frames/preview/tags', locals: {frame: frame}) %>
          <%= form.hidden_field :tag_list, value: frame.tag_list.join(",") %>
          <div class="row d-flex justify-content-sm-center">
            <label for="name" class="col-form-label-sm col-sm-2">名前：</label>
            <div class="form-group col-sm-4">
              <%= frame.name %>
              <%= form.hidden_field :name %>
            </div>
          </div>
          <div class="row d-flex justify-content-sm-center">
            <label for="name" class="col-form-label-sm col-sm-2">撮影日時：</label>
            <div class="form-group col-sm-4">
              <%= frame.shooted_at.present? ? l(frame.shooted_at) : '' %>
              <%= form.hidden_field :shooted_at %>
            </div>
          </div>
          <div class="row d-flex justify-content-sm-center">
            <label for="comment" class="col-form-label-sm col-sm-2">コメント：</label>
            <div class="form-group col-sm-4">
              <%= simple_format(h(frame.comment)) %>
              <%= form.hidden_field :comment %>
            </div>
          </div>
          <br>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-sm-center">
            <div class="form-group col-sm-6">
              <%= form.button class: 'btn btn-primary' do %>
                <span class="show-when-enabled">登録</span>
                <span class="show-when-disabled">送信中...</span>
              <% end %>
              <%= form.submit '戻る', class: 'btn btn-outline-secondary' %>
            </div>
          </div>
        </div>