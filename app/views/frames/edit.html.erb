<%= turbo_frame_tag "frames" do %>
  <br>
  <div data-controller="frame preview">
    <%= form_with model: @frame, local: true do |form| %>
      <div class="card">
        <div class="card-block">
          <br>
          <%= render(partial: 'frames/error_messages', locals: {model: @frame}) %>
          <br>
          <% if @frame.image.present? %>
          <div class="d-flex justify-content-sm-center">
            <%= link_to image_tag(@frame.image_url(:three), class: 'mx-auto'), @frame.image_url, class: 'mx-auto', "data-frame-target": "lm" %>
          </div>
          <br>
          <% end %>
          <%= form.hidden_field :image, value: form.object.cached_image_data %>
          <% unless @frame.confirming == 'true' %>
          <%= render(partial: 'frames/edit/input', locals: {form: form, frame: @frame}) %>
          <% else %>
          <%= render(partial: 'frames/edit/confirm', locals: {form: form, frame: @frame}) %>
          <% end %>
          <br>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
