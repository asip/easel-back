<%= turbo_frame_tag "admins" do %>
  <%= form_with model: @user, url: manager_sessions_path, method: :post, local: true, html: { 'data-turbo-frame': "_top", 'data-turbo': false } do |form| %>
    <br>
    <div class="card">
      <div class="card-header">
        <div class="float-start">
          <%= link_to root_path, "data-turbo-frame": "_top" do %><i class="bi bi-arrow-left-circle"></i><% end %>
          &nbsp;<%= t('action.administration.title') %>
        </div>
      </div>
      <div class="card-block">
        <br>
        <%= render Toast::Component.new(messages: @user.errors.full_messages) %>
        <div class="row d-flex justify-content-sm-center border border-white">
          <div class="col-sm-6">
            <table class="table table-bordered table_rounded">
              <tbody>
                <tr>
                  <td style="width: 30%;">
                    <label for="email" class="col-form-label-sm"><%= t('activerecord.attributes.user.email') %></label>
                  </td>
                  <td style="width: 70%;">
                    <%= form.text_field :email, placeholder: t('activerecord.attributes.user.email'), class: 'form-control' %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <label for="password" class="col-form-label-sm"><%= t('activerecord.attributes.user.password') %></label>
                  </td>
                  <td>
                    <%= form.password_field :password, placeholder: t('activerecord.attributes.user.password'), class: 'form-control' %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <br>
        <div class="row d-flex justify-content-sm-center">
          <div class="form-group col-sm-6">
            <%= form.submit t('action.administration.login'), class: 'btn btn-primary' %>
          </div>
        </div>
        <br>
      </div>
    </div>
  <% end %>
<% end %>