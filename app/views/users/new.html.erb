<%= turbo_frame_tag 'users' do %>
  <%= form_with model: @user, local: true do |form| %>
    <br>
    <div class="card">
      <div class="card-header">
        ユーザー登録
      </div>
      <div class="card-block">
        <br>
        <%= render(partial: 'users/error_messages', locals: {model: @user}) %>
        <br>
        <% unless @user.confirming == 'true' %>
        <%= render(partial: 'users/new/input', locals: {form: form, user: @user}) %>
        <% else %>
        <%= render(partial: 'users/new/confirm', locals: {form: form, user: @user}) %>
        <% end %>
        <br>
      </div>
    </div>
  <% end %>
<% end %>
