<%= turbo_frame_tag "users" do %>
<%= form_with model: @user, url: sessions_path, method: :post, local: true, html: { 'data-turbo-frame': "_top" } do |form| %>
<br>
<div class="card">
  <div class="card-header">
    ログイン
  </div>
  <div class="card-block">
    <br>
    <% @user.errors.full_messages.each do |message| %>
    <div class="d-flex justify-content-md-center">
      <div class="alert alert-warning col-md-6" role="alert">
        <%= message %>
      </div>
    </div>
    <% end %>
    <br>
    <div class="d-flex justify-content-md-center">
      <label for="email" class="form-label col-md-2 label-bg-style">Eメール</label>
      <div class="form-group col-md-4">
        <%= form.text_field :email, placeholder: 'Eメール', class: 'form-control' %>
      </div>
    </div>
    <div class="d-flex justify-content-md-center">
      <label for="password" class="form-label col-md-2 label-bg-style">パスワード</label>
      <div class="form-group col-md-4">
        <%= form.password_field :password, placeholder: 'パスワード', class: 'form-control' %>
      </div>
    </div>
    <br>
    <div class="d-flex justify-content-md-center">
      <div class="form-group col-md-6">
        <%= form.submit 'ログイン', class: 'btn btn-primary' %>
        <%= link_to 'ユーザー登録', signup_path, class: 'btn btn-primary' %>
        <%= link_to '戻る', root_path, class: 'btn btn-outline-secondary', "data-turbo": false  %>
      </div>
    </div>
    <br>
  </div>
</div>
<% end %>
<% end %>
