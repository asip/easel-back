        <label for="passowrd" class="form-label col-md-2 label-bg-style">パスワード</label>
        <div class="form-group col-sm-4">
          <%= @user.password %>
        </div>
      </div> -->
      <br>
      <!--<div class="row d-flex justify-content-sm-center">
        <div class="form-group col-sm-6">
          <%= link_to '戻る', root_path(query_params),class: 'btn btn-outline-secondary', 'data-turbo': false %>
        </div>
      </div>
      <br>-->
    </div>
  </div>
  <br>
<% end %>